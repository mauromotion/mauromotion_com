---
const { prevPost, nextPost } = Astro.props;
---

<style>
  .posts-buttons {
    display: flex;
    justify-content: space-between;
    gap: 5rem;
  }
  .button {
    padding: 1rem 1.5rem;
    margin-top: 4rem;
    text-transform: uppercase;
    /* font-weight: bold; */
    font-size: 1rem;
    background-color: var(--color-background-secondary);
    color: #efe8e3;
    text-decoration: none;
    border-radius: 5px;
  }

  .button h3 {
    margin: 0 0 1rem 0;
    padding: 0;
    text-align: unset;
  }

  .button a {
    color: #efe8e3;
    text-transform: capitalize;
  }

  .button a:hover {
    color: var(--color-accent-orange);
  }

  #right-button {
    text-align: right;
  }
</style>

<div class="posts-buttons">
  {
    prevPost.data && (
      <div class="button">
        <h3> ⟸ Older</h3>
        <a href={`/posts/${prevPost.slug}/`}>{prevPost.data.title}</a>
      </div>
    )
  }
  {
    nextPost.data && (
      <div class="button" id="right-button">
        <h3>Newer ⟹</h3>
        <a href={`/posts/${nextPost.slug}/`}>{nextPost.data.title}</a>
      </div>
    )
  }
</div>
