---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { pageTitle } = Astro.props;
---

<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=fira-sans:400,700"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="mauromotio's personal website"
      href={new URL('rss.xml', Astro.site)}
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow, noai, noimageai" />
    <meta name="pinterest" content="nopin" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} - mauromotion.com</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <a
      rel="me"
      class="visually-hidden"
      aria-hidden="true"
      href="https://mograph.social/@mauro">Mastodon verification link</a
    >
    <!-- FIXME: this is an horrid hack -->
    <div aria-hidden="true" id="filler"><p></p></div>
  </body>
</html>
