---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = '404';
---

<style>
  #big-number {
    font-size: 8rem;
    text-align: center;
  }

  #small-text {
    text-align: center;
  }
  .error-404-section {
    margin-top: 10rem;
    margin-bottom: 15rem;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <header>
    <h1 id="big-number">404</h1>
  </header>
  <section class="error-404-section">
    <p id="small-text">
      Oopsie daisy!<br /> The page you are looking for does not exist.
    </p>
  </section>
</BaseLayout>
